<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flow_recyclerview_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/flow_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
    <TextView
        android:id="@+id/projectNameTv"
        android:layout_width="wrap_content"
        android:text="Start"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#424242"
        android:textSize="18sp"
        android:paddingTop="53dp"
        android:paddingLeft="73dp"
        app:layout_constraintStart_toStartOf="@id/projectNameTv"
        app:layout_constraintTop_toTopOf="@id/projectNameTv"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/projectNameTv1"
        android:layout_width="wrap_content"
        android:text="Command"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#424242"
        android:textSize="18sp"
        android:paddingTop="53dp"
        android:paddingLeft="91dp"
        app:layout_constraintStart_toStartOf="@id/projectNameTv3"
        app:layout_constraintTop_toTopOf="@id/projectNameTv3"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/projectNameTv2"
        android:layout_width="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="Command \nfor left side"
        android:textAlignment="center"
        android:textColor="#424242"
        android:textSize="17sp"
        android:paddingTop="127dp"
        android:paddingLeft="54dp"
        app:layout_constraintStart_toStartOf="@id/projectNameTv"
        app:layout_constraintTop_toTopOf="@id/projectNameTv"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/projectNameTv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="Command \nfor right side"
        android:textAlignment="center"
        android:textColor="#424242"
        android:textSize="17sp"
        android:paddingTop="127dp"
        android:paddingLeft="86dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/projectNameTv"
        app:layout_constraintTop_toTopOf="@id/projectNameTv3" />
    <TextView
        android:id="@+id/projectNameTv4"
        android:layout_width="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="Condition"
        android:textColor="#424242"
        android:textSize="18sp"
        android:paddingTop="215dp"
        android:paddingLeft="62dp"
        app:layout_constraintStart_toStartOf="@id/projectNameTv"
        app:layout_constraintTop_toTopOf="@id/projectNameTv"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>